---
import slateConfig from '~@/slate.config';
interface Props {
  title: string;
  description?: string;
  image?: string;
}
const {
  title,
  description = slateConfig.description,
  image = '/og_image.png',
} = Astro.props;
const jsonLd = JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: title,
  description: description,
  url: Astro.url.origin,
  image: new URL(image, Astro.url),
  publisher: {
    '@type': 'Person',
    name: 'extrastu',
  },
  keywords: 'AI Vibe, Vibe Coding, AI Tools, Coding Tools, Developer Tools, AI Products, Programming Resources, Tech Blog',
  inLanguage: 'en-US',
});
---

<script type="application/ld+json" set:html={jsonLd} />
